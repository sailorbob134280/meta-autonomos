#!/bin/sh
# AutonomOS help system - displays feature-specific cheatsheets
#
# Each installed feature adds a help snippet to /etc/autonomos/help.d/
# Run 'halp' to see all available commands and enabled features.

HELP_DIR="/etc/autonomos/help.d"

echo "=========================================="
echo "  AutonomOS Quick Reference"
echo "=========================================="
echo

if [ -d "$HELP_DIR" ] && [ "$(ls -A $HELP_DIR 2>/dev/null)" ]; then
    for f in "$HELP_DIR"/*.help; do
        [ -f "$f" ] && cat "$f"
        echo
    done
else
    echo "No help files found in $HELP_DIR"
fi

echo "=========================================="
